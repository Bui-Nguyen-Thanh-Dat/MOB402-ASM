<table class="table" style="margin-top: 5px;">
  <thead>
    <tr>
      <th scope="col">MaSP</th>
      <th scope="col">TenSP</th>
      <th scope="col">LoaiSP</th>
      <th scope="col">Don gia</th>
      <th scope="col">Hinh anh</th>
      <th scope="col">Mau Sac</th>
       
    </tr>
  </thead>
  <tbody>
    {{#each data}}
    <tr>
      <th scope="row">{{this.masp}}</th>
      <td>{{this.tensp}}</td>
      <td>{{this.loaisp}}</td>
      <td>{{this.price}}</td>
      <td><img src="{{this.image}}" alt="..." width="75px" height="50px"></td>
      <td>{{this.color}}</td>
      <td><button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal{{this._id}}">Xóa</button>
  
  <div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Xóa</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      Bạn có chắc muốn xóa không?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <a href="addproduct/delete/{{this._id}}"  class="btn btn-primary">Save changes</a>
      </div>
    </div>
  </div>
</div>

      
      
      
